---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import { socials } from "../assets/data";
import { Image } from "astro:assets";
---

<Layout title="Home">
    <main class="w-screen">
        <div
            id="Home"
            class="w-full h-screen text-center items-center flex justify-stretch"
        >
            <div
                class="flex flex-col justify-center items-center text-center w-full h-full ml-64"
            >
                <h1
                    class="sm:text-8xl text-6xl font-Orbiter font-bold py-2 ml-12"
                >
                    Hey, I'm <span class="text-green-400">Chinedum</span>
                </h1>
                <h1
                    class="sm:text-7xl text-6xl font-Orbiter font-bold py-2 ml-12"
                >
                    and I like to Build Stuff
                </h1>
                <p></p>
                <ul class="flex justify-center mt-12 ml-12">
                    {
                        socials.map((social) => (
                            <li class="mx-10 opacity-70 hover:opacity-100 duration-300">
                                <button class="bg-green-400 rounded-full w-20 h-20 border-white border-2 hover:duration-500 hover:animate-bounce">
                                    <a
                                        href={social.link}
                                        target="_blank"
                                        class="text-4xl"
                                    >
                                        <i
                                            class={
                                                social.logo +
                                                " bx-lg hover:scale-125"
                                            }
                                        />
                                    </a>
                                </button>
                            </li>
                        ))
                    }
                </ul>
            </div>
            <div class="h-full w-full items-center flex justify-center mr-36">
                <Image
                    src="/images/ProgrammerLogo.png"
                    width={2200}
                    height={2200}
                    alt="programmer logo image"
                    class="mr-80"
                />
            </div>
        </div>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 0rem;
        width: 100%;
        color: white;
        font-size: 20px;
        line-height: 1.5;
        height: 100vh;
        position: absolute;
        overflow-x: hidden;
    }
</style>
