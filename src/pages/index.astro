---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Projects from '../components/Projects.astro';
import Technologies from '../components/Technologies.astro';
import Form from '../components/Form.astro';
import "../styles/global.css";
import { socials } from "../assets/data";
//import { Image } from 'astro:assets'
---

<Layout title="Welcome to Astro.">
  <Nav />
	<main class="w-screen">
    <div id="Home" class="w-full h-screen text-center items-center">
      <div class="flex flex-col justify-center items-center text-center w-full h-full">
        <h1 class="sm:text-9xl text-7xl font-Essential py-2">HeLLo</h1>
        <h1 class="sm:text-7xl text-5xl font-Essential">aNd</h1>
        <h1 class="sm:text-8xl text-6xl font-Essential">WElCoME</h1>
        <ul class="flex justify-center mt-12">
          {socials.map((social) => (
            <li class="mx-12 opacity-70 hover:opacity-100 duration-300">
              <a href={social.link} target="_blank" class="text-4xl"><i class={social.logo + " bx-lg"}/></a>
            </li>
          ))}
        </ul> 
      </div>
    </div>
    <div id="Mission" class="w-full h-screen text-center items-center">
      <div class="flex justify-self-center flex-col min-w-full w-full h-full">
        <h1 class="sm:text-8xl text-5xl font-Essential mt-36">Mission</h1>
        <div class="flex justify-center mx-auto py-16 xl:w-[80%] sm:w-full xs:w-[75%]">
          <p class="text-5xl text-gray-400 font-Neue opacity-80">As a new software engineer, I am on a mission to make a meaningful impact in the world of technology. My journey is driven by a core set of principles that guide my work and aspirations</p>
        </div>
      </div>
    </div>
 
    <div id="Technologies" class="w-full h-screen text-center items-center">
      <div class="flex flex-col justify-self-center min-w-full w-full h-full">
        <h1 class="sm:text-8xl text-5xl font-Essential mt-36">Technologies</h1>
        <div class="flex justify-center items-center h-full">
          <Technologies />
        </div>
      </div>
    </div>
    <div id="Projects" class="w-full h-screen text-center items-center">
      <div class="flex flex-col md:justify-self-center justify-self-start min-w-full w-full h-full">
        <h1 class="md:text-8xl text-5xl font-Essential mt-36">Projects</h1>
        <Projects />
      </div>
    </div>
    <div id="Contact" class="w-full h-screen text-center items-center">
        <Form />
    </div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 0rem;
		width: 100%;
		color: white;
		font-size: 20px;
    line-height: 1.5;
    height: 100vh;
    position: absolute;
    overflow-x: hidden;
	}
  #Home {
    background-image: url('/images/spaceman.png');
    background-size: cover; 
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
  }
  #Mission {
    background-image: url('/images/seaman.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
  }
  #Technologies {
    background-image: url('/images/smokeman.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
  }
  #Projects {
    background-image: url('/images/blackholeman.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
  }
  #Contact {
    background-image: url('/images/contactman.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
  }
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	
</style>
