---
import Layout from "../layouts/Layout.astro";
import Works from "../components/Works.astro";
import "../styles/global.css";
---

<Layout title="Projects">
    <main class="w-screen">
        <div id="Projects" class="w-full h-screen text-center items-center">
            <div
                class="flex flex-col md:justify-self-center justify-self-start min-w-full w-full h-full"
            >
                <h1 class="md:text-10xl text-5xl font-Bebas mt-36 uppercase">
                    Projects
                </h1>
                <Works />
            </div>
        </div>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 0rem;
        width: 100%;
        color: white;
        font-size: 20px;
        line-height: 1.5;
        height: 100vh;
        position: absolute;
        overflow-x: hidden;
    }
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>
