---
import { technologies } from "../assets/data";
import TechnologyCard from "./TechnologyCard.astro";
---

<!--========= Slider ==========-->
<div class="overflow-hidden whitespace-nowrap cursor-pointer" data-tech-wrapper>
  <div class="tech-card inline-block">
    {technologies.map((tech) => (
      <div class="inline-block m-0">
        <TechnologyCard
        text={tech.text}
        logo={tech.logo}/>
      </div>
    ))}
  </div>
  
</div>

<!-- ========== Modal ========== --> 
<div class="w-screen h-screen bg-black/70 fixed top-0 left-0 z-[100] justify-center items-center hidden" data-tech-modal>
  <div class="tech-modal h-[70%] w-4/5 overflow-y-auto flex flex-wrap justify-center items-center gap-x-5 gap-y-4 bg-orange-500" data-tech-stop>
    {technologies.map((tech) => (
      <div class="inline-block m-0">
        <TechnologyCard
        text={tech.text}
        logo={tech.logo}/>
      </div>
    ))}
  </div>
</div>


<style>
  .tech-card {
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.03));
    padding-block: 2rem;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-color: #ffffff26;
    animation: 18s slide infinite linear;
  }

  @keyframes slide {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-100%);
    }
  }

  .tech-modal {
    background-image: linear-gradient(to bottom, #000, hsla(0, 0%, 0%, 0.9));
    border: 2px solid #ffffff26;
    animation: fade-in 0.5s forwards;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: scale(0.5);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }


</style>
